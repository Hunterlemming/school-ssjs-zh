<!DOCTYPE html>
<html lang="en">
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <title>Pilots</title>

</head>

<body>
<h1>Pilots</h1>
<ul class="chips">
    <li onclick="filter('junior')">
        <div>Junior</div>
    </li>
    <li class="selected" onclick="filter('medior')">
        <div>Medior</div>
    </li>
    <li onclick="filter('senior')">
        <div>Senior</div>
    </li>
</ul>
<ul class="data-list">
    <% for(let i = 0; i < pilots.length; i++) { %>
    <li>
        <img src="https://robohash.org/<%= pilots[i].name %>">
        <div>
            <div><b><%= pilots[i].name %></b></div>
            <div>
                <% if (pilots[i].flight_hours < 1000) { %>
                    Junior
                <% } else if (pilots[i].flight_hours < 5000) { %>
                    Medior
                <% } else { %>
                    Senior
                <% } %>
                (<%= pilots[i].flight_hours %> hrs)
            </div>
            <div class="stars">
            <span class="material-icons">
                    stars
            </span>
                <% if (pilots[i].flight_hours >= 1000) { %>
                    <span class="material-icons">
                stars
              </span>
                <% } %>
                <% if (pilots[i].flight_hours >= 5000) { %>
                    <span class="material-icons">
                      stars
              </span>
                <% } %>
            </div>
        </div>
        <div>
            <a href="/pilots/<%= pilots[i].id %>">
                <i class="material-icons">arrow_forward</i>
            </a>
        </div>
    </li>
    <% } %>
</ul>
<script>
  let selectedLevel = '<%= level %>';

  function filter(level) {
    if (selectedLevel === level) {
      selectedLevel = '';
    } else {
      selectedLevel = level;
    }
    reload();
  }

  function reload() {
    let href = '/pilots';
    if (selectedLevel) {
      href += '?level=' + selectedLevel;
    }
    location.href = href;
  }
</script>

</body>

</html>
